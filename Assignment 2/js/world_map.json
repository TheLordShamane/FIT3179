{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Map showing tourists arriving in Malaysia by country in 2023",
  "width":1000,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/TheLordShamane/FIT3179/refs/heads/main/Assignment%202/Data/Countries_tourists_visited_with_lat_long.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {"calculate": "datum['COUNTRY OF NATIONALITY']", "as": "country"},
    {"calculate": "datum['2023']", "as": "tourists_2023"}
  ],
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/TheLordShamane/FIT3179/refs/heads/main/Assignment%202/js/ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {"type": "geoshape", "fill": "white", "stroke": "lightgray"}
    },
     {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "mark": {"type": "circle", "color": "steelblue", "opacity": 0.6},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "tourists_2023",
          "type": "quantitative",
          "title": "Tourists in 2023",
          "scale": {"range": [10, 500]}
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "tourists_2023", "type": "quantitative", "title": "Tourists in 2023"}
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "gray",
        "strokeWidth": 0.5
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "transform": [
        {
          "calculate": "datum.latitude % 10 == 0 ? datum.latitude : null",
          "as": "lat"
        }
      ]
    },
    {
      "mark": {
        "type": "rule",
        "color": "gray",
        "strokeWidth": 0.5
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "transform": [
        {
          "calculate": "datum.longitude % 10 == 0 ? datum.longitude : null",
          "as": "lon"
        }
      ]
    }
  ]
}
